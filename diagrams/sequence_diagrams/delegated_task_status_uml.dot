@startuml

participant Project as p
participant OriginalTask as ot
participant OriginalStatus as os
participant Delegation as d
participant DelegationTask as dt
participant DelegationStatus as ds

p -> ot: isFinished()
alt delegatedTask
    ot -> os: isFinished()
    os -> p: bool
else
    os -> d: isFinished()
    note left
        The task status
        will be a
        DelegatedStatus here.
    end note
    d -> dt: isFinished()
    dt -> ds: isFinished()
    ds -> p: bool
end


@enduml
